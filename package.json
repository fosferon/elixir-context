{
  "name": "elixir-context",
  "private": true,
  "bin": { "elixir-context": "bin/elixir-context.js" },
  "scripts": {
    "ec:export": "bash -lc 'cd ../orchestrator && mix run priv/export.exs > ../.elixir_context/export.jsonl'",
    "ec:ingest": "node scripts/ingest.js ../.elixir_context/export.jsonl ../.elixir_context/ec.sqlite",
    "ec:build": "npm run ec:export && npm run ec:ingest",
    "ec:serve": "node scripts/mcp-stdio.js --db ../.elixir_context/ec.sqlite",
    "ec:watch": "node scripts/watch.js --root .. --db ../.elixir_context/ec.sqlite --exporter ../orchestrator/priv/export.exs"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "chokidar": "^3.6.0"
  }
}